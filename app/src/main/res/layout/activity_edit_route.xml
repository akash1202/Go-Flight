<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:text="Source"
            android:textColor="#A76464" />

        <Spinner
            android:id="@+id/etSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/edittext_rounded"
            android:entries="@array/source"
            android:padding="@dimen/_8ssp"
            android:scrollbars="none"
            android:singleLine="true"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:text="Destination"
            android:textColor="#A76464" />

        <Spinner
            android:id="@+id/etDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/edittext_rounded"
            android:entries="@array/destination"
            android:padding="@dimen/_8ssp"
            android:scrollbars="none"
            android:singleLine="true"
            android:spinnerMode="dropdown" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:text="Airport"
            android:textColor="#A76464" />

        <EditText
            android:id="@+id/etAirport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/edittext_rounded"
            android:hint="AirPort"
            android:padding="8dp"
            android:textColorHint="#C5BFC2" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:text="Airways"
            android:textColor="#A76464" />

        <Spinner
            android:id="@+id/spinAirways"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/edittext_rounded"
            android:entries="@array/airways"
            android:padding="@dimen/_8ssp"
            android:scrollbars="none"
            android:singleLine="true"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:text="From Time"
            android:textColor="#A76464" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvFromTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="13dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_rounded"
                android:hint="From Time"
                android:padding="@dimen/_9ssp"
                android:singleLine="true" />

            <Spinner
                android:id="@+id/spinFromAmpm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="13dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_rounded"
                android:entries="@array/ampm"
                android:padding="@dimen/_8ssp"
                android:scrollbars="none"
                android:singleLine="true"
                android:spinnerMode="dropdown" />


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:text="To Time"
            android:textColor="#A76464" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvToTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="13dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_rounded"
                android:hint="To Time"
                android:padding="@dimen/_9ssp"
                android:singleLine="true" />

            <Spinner
                android:id="@+id/spinToAmpm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="13dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_rounded"
                android:entries="@array/ampm"
                android:padding="@dimen/_8ssp"
                android:scrollbars="none"
                android:singleLine="true"
                android:spinnerMode="dropdown" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:text="Choose Stops and Hours"
            android:textColor="#A76464" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <Spinner
                android:id="@+id/spinStops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="13dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_rounded"
                android:entries="@array/stops"
                android:padding="@dimen/_8ssp"
                android:scrollbars="none"
                android:singleLine="true"
                android:spinnerMode="dropdown" />



            <Spinner
                android:id="@+id/spinTotalHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="13dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_rounded"
                android:entries="@array/totalhours"
                android:padding="@dimen/_8ssp"
                android:scrollbars="none"
                android:singleLine="true"
                android:spinnerMode="dropdown" />


        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:text="Total Days"
            android:textColor="#A76464" />

        <Spinner
            android:id="@+id/spinTotalDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/edittext_rounded"
            android:entries="@array/days"
            android:padding="@dimen/_8ssp"
            android:scrollbars="none"
            android:singleLine="true"
            android:spinnerMode="dropdown" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:text="Select Route"
            android:textColor="#A76464" />

        <Spinner
            android:id="@+id/spinRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/edittext_rounded"
            android:entries="@array/route"
            android:padding="@dimen/_8ssp"
            android:scrollbars="none"
            android:singleLine="true"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:text="Price"
            android:textColor="#A76464" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="13dp"
            android:inputType="number"
            android:background="@drawable/edittext_rounded"
            android:hint="Price"
            android:padding="8dp"
            android:textColorHint="#C5BFC2" />


        <Button
            android:id="@+id/btnAddHotel"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:layout_gravity="right"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:background="#631636"
            android:text="Update Route"
            android:textColor="#fff" />


    </LinearLayout>
</ScrollView>