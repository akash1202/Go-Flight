<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splash"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_search_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_1sdp"
        android:layout_margin="@dimen/_4sdp"
        app:cardBackgroundColor="#34FDFBFB"

        app:cardMaxElevation="@dimen/_3sdp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

    <ImageView

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/admin"/>


    <TextView
        android:id="@+id/tv_username"
        android:text="Admin Username"
        android:textSize="20dp"
        android:fontFamily="@font/graphikregular"
        android:layout_gravity="left"
        android:layout_marginLeft="30dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/et_USERNAME"
        android:singleLine="true"
        android:fontFamily="@font/graphikregular"
        android:background="@drawable/edittext_rounded"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <!--    <View-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_marginLeft="30dp"-->
    <!--        android:layout_marginRight="30dp"-->
    <!--        android:layout_height="2dp"-->
    <!--        android:background="#8E989E"/>-->



    <TextView
        android:id="@+id/tv_password"
        android:text="Password"
        android:layout_gravity="left"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="18dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:fontFamily="@font/graphikregular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/et_PWD"
        android:singleLine="true"
        android:inputType="textPassword"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/graphikregular"
        android:background="@drawable/edittext_rounded"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"  />

    <TextView
        android:id="@+id/tv_forgetpwd"
        android:text="Forget Password ?"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:textColor="#96B0BF"
        android:fontFamily="@font/graphikregular"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />





    <Button
        android:id="@+id/btnLogin"
        android:text="Login"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000"
        android:fontFamily="@font/graphikregular"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textStyle="bold"
        android:background="#9099a2" />

    </LinearLayout>

    </androidx.cardview.widget.CardView>
    </LinearLayout>