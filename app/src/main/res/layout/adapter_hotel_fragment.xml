<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_hotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="2dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/hotelImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"


                android:layout_marginTop="@dimen/_5sdp"
                android:scaleType="fitXY"

                android:src="@drawable/bg" />

            <TextView
                android:id="@+id/tvHotelname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hotelImage"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Hotel Name"
                android:textColor="#000"
                android:textSize="20dp" />


            <!--  <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:visibility="gone"
                  android:id="@+id/hotelImage"
                  android:layout_width="@dimen/_80sdp"
                  android:layout_height="@dimen/_80sdp"
                  android:layout_below="@+id/tvHotelname"
                  android:layout_alignParentRight="true"
                  android:layout_marginTop="@dimen/_5sdp"
                  android:layout_marginRight="@dimen/_13sdp"
                  android:src="@drawable/bg"
                  app:civ_border_color="#FF000000"
                  app:civ_border_width=".5dp" />-->


            <TextView
                android:id="@+id/tvCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHotelname"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Country"
                android:textColor="#000" />


            <TextView
                android:id="@+id/tvCityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHotelname"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_13sdp"
                android:fontFamily="@font/poppinsmedium"
                android:text="City"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tvProvince"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCityName"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppinsmedium"
                android:text="City"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tvoPstalcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCityName"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_13sdp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Postal Code"
                android:textColor="#000" />


            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvoPstalcode"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Price"
                android:textColor="#000" />


            <Button
                android:id="@+id/btnMoreInfo"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="35dp"
                android:layout_below="@+id/tvPrice"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="#631636"
                android:fontFamily="@font/poppinsmedium"
                android:text="More Info >>"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textStyle="bold" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>

